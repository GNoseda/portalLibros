<% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.status %></td>
    <td>
      <% if book.status == 'abled' %>
        <%= link_to 'Reserve', status_path(book), method: :post, remote: true %>
      <% else %>
        <%= link_to 'Drop', drop_path(book), method: :post, remote: true %>
      <% end %>
    </td>
  </tr>
<% end %>
