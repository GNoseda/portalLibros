<%= form_with(model: book, url: buy_path, remote: true, id: "buyForm") do |form| %>
  
  <div class="field">
    <%= form.label :book %>
    <%= select("buy", "id", @buy_options, {:include_blank => 'Select a book'}, id: "buySelect") %>
  </div>

  <div class="row">
    <div class="actions col-3">
      <%= form.submit "Buy!"%>
    </div>
  </div>
  
<% end %>

<div class="actions col-9" id="confirm"></div>