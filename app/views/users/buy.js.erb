$('#confirm').html('<%=j render "confirmbutton"%>')
$('#payMessage').text('Are you sure?')
total_time = 5

$('#timer').text(setTime())

interval = setInterval(getTimeLeft, 1000);

function getTimeLeft(){
    total_time--
    setTime()
    if(total_time == 0){
        $('#payMessage').text("time's up, click on 'buy!' to try again")
        $('#confirmButton').attr("disabled",true)
        clearInterval(interval)
    }
}

function setTime(){
    mins = Math.floor(total_time/60)
    secs = total_time - (mins * 60)
    $('#timer').text(textTime(mins) + ":" + textTime(secs))
}

function textTime(value){
    if (value < 10){
        value = "0" + value
    }
    return value
}

